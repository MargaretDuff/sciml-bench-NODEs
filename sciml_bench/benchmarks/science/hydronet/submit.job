#!/bin/bash

#SBATCH --job-name=hydronet
#SBATCH -p pearl
#SBATCH --ntasks 1
#SBATCH --mem=256GB
#SBATCH --gres=gpu:1
#SBATCH -t 12:00:00 # time (D-HH:MM)
#SBATCH --output=%x.%j.out
#SBATCH --error=%x.%j.err

output_dir="results/job_$SLURM_JOB_ID"
mkdir -p $output_dir
torchrun --standalone --nnodes=$SLURM_NNODES --nproc_per_node=$SLURM_NPROCS train_direct_ddp.py --savedir $output_dir --args 'train_args_min.json'